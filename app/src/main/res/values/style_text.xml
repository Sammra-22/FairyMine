<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Text">
        <item name="android:textColor">@color/textDark</item>
    </style>

    <style name="Text.Header">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@string/font_family_condensed</item>
        <item name="fontFamily">@string/font_family_condensed</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@string/font_family_medium</item>
        <item name="fontFamily">@string/font_family_medium</item>
    </style>

    <style name="Text.Label">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@string/font_family_regular</item>
        <item name="fontFamily">@string/font_family_regular</item>
    </style>

    <style name="Text.Body">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@string/font_family_regular</item>
        <item name="fontFamily">@string/font_family_regular</item>
    </style>

    <style name="Text.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@string/font_family_medium</item>
        <item name="fontFamily">@string/font_family_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
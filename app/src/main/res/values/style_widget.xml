<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppWidget"/>

    <style name="AppWidget.MainTabLayout">
        <!--<item name="tabIndicatorColor">@color/transparent</item>-->
        <item name="tabIndicatorHeight">0dp</item>
        <!--<item name="tabItemLayout">@layout/view_main_tab</item>-->
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="AppWidget.Button">
        <item name="android:theme">@style/AppTheme.Button</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">55dp</item>
    </style>

    <style name="AppWidget.Button.Secondary" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppWidget.Button.Inline">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="AppWidget.Card" parent="CardView.Light">
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">@dimen/dp_4</item>
    </style>

    <style name="AppWidget.Card.Host">
        <item name="android:layout_margin">@dimen/dp_12</item>
    </style>

    <style name="AppWidget.Card.Layout">
        <item name="android:layout_marginLeft">@dimen/dp_12</item>
        <item name="android:layout_marginRight">@dimen/dp_12</item>
        <item name="android:layout_marginTop">@dimen/dp_6</item>
        <item name="android:layout_marginBottom">@dimen/dp_6</item>
    </style>

    <style name="AppWidget.ChildInCard">
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <item name="android:layout_marginBottom">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_32</item>
        <item name="android:layout_marginLeft">@dimen/dp_32</item>
    </style>

    <style name="AppWidget.DialogTransition">
        <item name="android:windowEnterAnimation">@anim/dialog_expand_less_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_expand_more_out</item>
    </style>
</resources>